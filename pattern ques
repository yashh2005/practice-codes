PATTERN QUESTIONS C

LEFT half pyramid

#include <stdio.h>

int main()
{
    int rows;
    int i,j;
    printf("how many rows you want?");
    scanf("%d",&rows);
    
    for(int i=0;i < rows;i++)
    {
        for(int j=0;j<i;j++)
        {
            printf("* ");
        }
        printf("\n");
    }
    return 0;
}

------------------------------------------------------------------------

LEFT HALF PYRAMID

#include <stdio.h>

int main()
{
    int rows;
    int i,j;
    printf("how many rows you want?");
    scanf("%d",&rows);
    
    for(i=0;i<rows;i++)
    {
        for(j=0;j < 2*(rows - i) - 1;j++)
        {
            printf(" ");
        }
        for(int k = 0; k <= i;k++){
            printf("* ");
        }
        printf("\n");
    }
    
    return 0;
}

------------------------------------------------------------------------

FULL STAR PYRAMID

#include <stdio.h>

int main()
{
    int rows;
    printf("how many rows you want?");
    scanf("%d",&rows);
    for(int i =0;i< rows;i++){
        for(int j=0;j < 2*(rows-i) - 1;j++){
            printf(" ");
        }
        for (int k = 0; k < 2 * i + 1;k++){
            printf("* ");
        }
        printf("\n");
    }
    return 0;
}
