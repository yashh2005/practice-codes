NOT A PRIME NUMBER

#include <iostream>
using namespace std;

int main(){

    int n;
    cout << "Enter number:" << endl;
    cin >> n;

    int i = 2;

    while(i<n){

        if(n%i==0){
            cout << "Not prime" << endl;
        }
        i = i + 1;
    }
}

